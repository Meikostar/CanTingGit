<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginBottom="55dp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/white_top_rectange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginBottom="20dp"
            android:layout_marginTop="23dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/cpcs"
            android:textColor="@color/slow_black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_marginTopPercent="1.5%sh" />
        <ListView
            android:layout_marginBottom="20dp"
            android:id="@+id/rl_menu"
            style="@style/lv_content"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/white"
            android:visibility="visible"
            android:layout_below="@+id/ll_bg"/>

      </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/sure_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/login_selector"
            android:gravity="center"
            android:text="@string/qd"
            android:textColor="@android:color/white" />

    </LinearLayout>


</RelativeLayout>

