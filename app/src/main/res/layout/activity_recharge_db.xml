<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhongchuang.canting.activity.RechargeActivity">


    <com.zhongchuang.canting.widget.NavigationBar
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationLeft_img="@drawable/back_white"
        app:navigationRight_type="txt"
        app:navigationRight_txt="@string/dbmx"
        app:navigationTitle="@string/dbcz" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/wite_rectanglebig"
        android:orientation="vertical">



          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <TextView

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="25dp"
                  android:layout_marginTop="18dp"
                  android:text="@string/czqkbs"
                  android:textColor="#333"
                  android:textSize="16sp" />
              <TextView
                  android:id="@+id/tv_rate"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="7dp"
                  android:layout_marginTop="18dp"
                  android:text="@string/zxczbl"
                  android:textColor="@color/red"
                  android:textSize="14sp" />
          </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/txt_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="@string/qkb"
                android:textColor="#333"
                android:textSize="24sp" />

            <com.zhongchuang.canting.widget.ClearEditText
                android:id="@+id/et_content"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="28dp"
                android:layout_weight="1"
                android:background="@null"
                android:inputType="phone"
                android:paddingLeft="8dp"
                android:textColor="#333"
                android:textColorHint="#999"
                android:textSize="30sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="25dp"
            android:background="#d8d8d8" />
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="18dp"
                android:text="支付金额： ￥500"
                android:textColor="#333"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_balances"
               android:layout_marginBottom="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="18dp"
                android:text="区链币余额： 0"
                android:textColor="#333"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_usa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/wite_rectanglebig"
        android:orientation="vertical"
        android:visibility="gone">


        <View

            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"
            android:background="#d8d8d8" />


    </LinearLayout>

    <LinearLayout

        android:id="@+id/ll_china"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/wite_rectanglebig"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_balance"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="28dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="账号余额"
                android:textColor="#333"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="(11.00)"
                android:textColor="#666"
                android:textSize="13sp" />

            <CheckBox
                android:id="@+id/cb_zfb"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="17dp"
                android:background="@drawable/selector_common_switch"
                android:button="@null"
                android:checked="true"></CheckBox>
        </LinearLayout>

        <View
            android:id="@+id/lines"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:background="#d8d8d8"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="28dp"
                android:src="@drawable/weiixin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="@string/wx"
                android:textColor="#333"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/cb_wx"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="17dp"
                android:background="@drawable/selector_common_switch"
                android:button="@null"
                android:checked="true"
                android:clickable="false"></CheckBox>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"
            android:background="#d8d8d8"
            android:visibility="gone" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="25dp"
            android:background="#d8d8d8"
            android:visibility="gone" />


    </LinearLayout>


    <TextView
        android:id="@+id/tv_charge"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/black_rectangle3"
        android:gravity="center"
        android:text="@string/chongzhi"
        android:textColor="@color/white"
        android:textSize="16sp" />
</LinearLayout>
