<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"

    >
    <View
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:background="@color/blue"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF2A93FF"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="@string/ghzfmm"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView

                android:id="@+id/iv_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:src="@mipmap/tab_back_btn" />
        </RelativeLayout>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:id="@+id/tv_hint"
        android:text="@string/ghzfmmxc"
        android:background="@color/content_bg"
        android:textColor="@color/color9"
        android:textSize="11sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:text="@string/jmm"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.zhongchuang.canting.widget.ClearEditText
                android:id="@+id/old_pass"
                android:layout_width="fill_parent"

                android:layout_height="35dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/qsrjmm"
                android:inputType="numberPassword"
                android:digits="0123456789"
                android:text=""
                android:maxLength="6"
                android:textColor="@color/slow_black"
                android:textColorHint="@color/bd"
                android:textSize="15sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="1dp"
            android:background="@color/linecolor" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:text="@string/xmm"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.zhongchuang.canting.widget.ClearEditText
                android:id="@+id/login_pass"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/qsrxmm"
                android:inputType="numberPassword"
                android:maxLength="6"

                android:digits="0123456789"
                android:text=""
                android:textColor="@color/slow_black"
                android:textColorHint="@color/bd"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="1dp"
            android:background="@color/linecolor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:text="@string/qrxmm"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <com.zhongchuang.canting.widget.ClearEditText
                android:id="@+id/login_pass_again"
                android:layout_width="fill_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/qrxmm"
                android:inputType="numberPassword"
                android:digits="0123456789"
                android:maxLength="6"
                android:text=""
                android:textColor="@color/slow_black"
                android:textColorHint="@color/bd"
                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="3dp"
            android:background="@color/linecolor" />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/login_selector"
            android:gravity="center"
            android:text="@string/qd"
            android:textColor="@color/white"
            android:textSize="16.5sp" />
        <TextView
            android:id="@+id/tv_forget_pswd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingRight="15dp"
            android:gravity="right"
            android:text="@string/wjjmm"
            android:textColor="@color/red"
            android:textSize="14.5sp" />

    </LinearLayout>


</LinearLayout>