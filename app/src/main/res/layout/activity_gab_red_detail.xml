<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f3"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background= "#FFD84E43">

        <RelativeLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="26dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="7dp"
                android:padding="8dp"
                android:src="@drawable/red_arrow"/>
            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/llhb"
                android:textColor="#FFF7CD99"
                android:textSize="18sp"/>
            <TextView
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/tv_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/hbjl"
                android:textColor="#FFF7CD99"
                android:textSize="15sp"/>

        </RelativeLayout>

    </FrameLayout>

 <com.zhongchuang.canting.widget.StickyScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent">
     <LinearLayout
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <RelativeLayout
             android:background="#FFF0F0F0"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

             <ImageView

                 android:layout_width="match_parent"
                 android:layout_height="81dp"
                 android:background="@drawable/jrmf_rp_open_rp_top"/>
             <ImageView
                 android:id="@+id/iv_img"
                 android:layout_centerHorizontal="true"
                 android:layout_marginTop="44dp"
                 android:layout_width="74dp"
                 android:layout_height="74dp"/>
             <TextView
                 android:layout_marginTop="12dp"
                 android:layout_centerHorizontal="true"
                 android:layout_below="@id/iv_img"
                 android:id="@+id/tv_name"
                 android:textSize="18sp"
                 android:text=""
                 android:textColor="@color/color3"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
             <TextView
                 android:text="恭喜发财  大吉大利"
                 android:layout_marginBottom="19dp"
                 android:layout_marginTop="20dp"
                 android:layout_centerHorizontal="true"
                 android:layout_below="@id/tv_name"
                 android:id="@+id/tv_content"
                 android:textSize="18sp"
                 android:textColor="@color/color3"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />


         </RelativeLayout>
         <LinearLayout
             android:id="@+id/ll_jf"
             android:layout_marginBottom="15dp"
             android:layout_below="@+id/tv_content"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center">



             <TextView
                 android:id="@+id/tv_amount_for_show"
                 style="@style/text_black_28"
                 android:layout_width="wrap_content"
                 android:layout_height="56dp"
                 android:gravity="center"
                 android:text="1"

                 android:textStyle="normal"
                 android:typeface="serif"/>
             <TextView


                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:text="@string/jf"
                 android:textSize="15sp"
                 android:textColor="@color/color6"
                 android:textStyle="normal"
                 android:typeface="serif"/>
         </LinearLayout>
         <LinearLayout
             android:background="@color/white"
             android:id="@+id/ll_list"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
             <TextView
                 android:paddingLeft="15dp"
                 android:id="@+id/tv_waits"
                 android:layout_width="match_parent"
                 android:layout_height="35dp"
                 android:gravity="center_vertical"
                 android:background="#fff"
                 android:textSize="12sp"
                 android:text="红包金额1兑换值，等待对方领取"
                 android:textColor="#999"
                 android:textStyle="normal"
                 android:typeface="serif"/>
             <View

                 android:layout_width="match_parent"
                 android:layout_height="0.5dp"
                 android:background="@color/linecolor"/>
             <com.zhongchuang.canting.widget.RegularListView
                 android:id="@+id/rl_menu"
                 style="@style/lv_content"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:background="@color/white"
                 android:visibility="visible" />
         </LinearLayout>
     </LinearLayout>
 </com.zhongchuang.canting.widget.StickyScrollView>


</LinearLayout>

