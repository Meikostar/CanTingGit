<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_common_item">

    <include layout="@layout/view_line_1" android:id="@+id/view_border_top"></include>

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="44.2dp"
        android:orientation="horizontal"
        android:paddingLeft="11.5dp"
        android:paddingRight="11.5dp"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:background="@drawable/selector_common_item">
        <ImageView
            android:layout_gravity="center_vertical"
            android:clickable="false"
            android:layout_marginRight="11.5dp"
            android:id="@+id/iv_img"
            android:layout_width="17dp"
            android:layout_height="17dp" />
        <LinearLayout
            android:id="@+id/ll_name"
            android:minWidth="91.2dp"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="44.2dp"
            android:orientation="vertical">
            <TextView
                android:minWidth="111.2dp"
                android:clickable="false"
                android:id="@+id/tv_name"
                android:layout_height="wrap_content"
                android:textSize="13.5sp"
                android:textColor="@color/slow_black"
                android:gravity="center_vertical"
                android:layout_width="wrap_content" />
            <TextView
                android:visibility="gone"
                android:layout_marginTop="7.5dp"
                android:clickable="false"
                android:id="@+id/tv_names"
                android:layout_height="wrap_content"
                android:textSize="11.5sp"
                android:textColor="@color/color8"
                android:gravity="center_vertical"
                android:layout_width="wrap_content" />
        </LinearLayout>
        <com.zhongchuang.canting.widget.YunShlEditText
            android:layout_marginRight="11.5dp"
            android:id="@+id/edt_value"
            android:layout_width="0dp"
            android:paddingTop="11.5dp"
            android:paddingBottom="11.5dp"
            android:textSize="13.5sp"
            android:textColor="@color/color6"
            android:textColorHint="@color/color8"
            android:layout_height="wrap_content"
            android:minHeight="44.2dp"
            android:layout_weight="1"
            android:background="@color/transparent"/>
        <ImageView
            android:id="@+id/iv_arrows"
            android:background="@drawable/arrow_left"
            android:layout_width="12.5dp"
            android:layout_height="12.5dp"
            android:layout_gravity="right|center_vertical"/>
        <CheckBox
            android:id="@+id/cb_check"
            android:background="@drawable/selector_common_switch"
            android:layout_width="43dp"
            android:layout_height="27dp"
            android:layout_gravity="center_vertical|right"
            android:button="@null"></CheckBox>
        <!--<ImageView-->
        <!--android:src="@drawable/supplier_my_icon_on_switch"-->
        <!--android:visibility="gone"-->
        <!--android:id="@+id/iv_check"-->
        <!--android:layout_width="43dp"-->
        <!--android:layout_height="27dp"-->
        <!--android:layout_gravity="right|center_vertical"/>-->
    </LinearLayout>
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.48dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/color_primary_e3"/>
    <include layout="@layout/view_line_1" android:id="@+id/view_border_bottom"></include>


</LinearLayout>