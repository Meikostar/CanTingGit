<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/alivc_titlebar_bg"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/alivc_title_back"
            android:layout_width="28dp"
            android:layout_height="37dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:padding="5dp"
            android:src="@drawable/back_white" />

        <TextView
            android:id="@+id/alivc_title_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"

            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <Button
            android:id="@+id/alivc_info_large_rate_btn"
            android:layout_width="50dp"
            android:layout_height="22dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/white_rectangle_lines"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:layout_marginTop="17dp"
            android:layout_marginRight="15dp"
            android:id="@+id/alivc_title_more"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="3dp"
            android:src="@drawable/alivc_more" />
    </LinearLayout>


    <LinearLayout

        android:id="@+id/controlbar"
        android:layout_width="1500dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/alivc_player_state"
            android:layout_width="26dp"
            android:layout_height="32dp"
            android:layout_marginLeft="12dp" />

        <FrameLayout
            android:id="@+id/fl_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="6dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="29dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/gift" />

            <LinearLayout
                android:id="@+id/alivc_info_large_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="65dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/et_comment"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_rectangle3"
                    android:hint="@string/fsnr"
                    android:paddingLeft="5dp"
                    android:textColorHint="#bcbcbc"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_send_comment"
                    android:layout_width="60dp"
                    android:layout_height="33dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_commentbg"
                    android:text="@string/fs"
                    android:textColor="#fff"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/alivc_info_small_bar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">


            </LinearLayout>

        </FrameLayout>


        <ImageView
            android:id="@+id/alivc_screen_mode"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

    </LinearLayout>


</RelativeLayout>