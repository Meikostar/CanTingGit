<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/alivc_titlebar_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/alivc_title_back"
                    android:layout_width="28dp"
                    android:padding="8dp"
                    android:layout_height="37dp"
                    android:src="@drawable/back_white" />

                <TextView
                    android:id="@+id/alivc_title_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="15sp" />


                <Button
                    android:id="@+id/alivc_info_large_rate_btn"
                    android:layout_width="50dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:background="@drawable/white_rectangle_lines"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/alivc_title_more"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:padding="3dp"
                    android:src="@drawable/alivc_more"
                    />
        </LinearLayout>



        <LinearLayout
            android:id="@+id/controlbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/alivc_infobar_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">


                <ImageView
                    android:id="@+id/alivc_player_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/alivc_info_bar_height"
                    android:layout_weight="1"
                    android:paddingLeft="6dp">
                        <ImageView
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/white_rectange"
                            android:layout_width="30dp"
                            android:layout_height="29dp" />

                        <LinearLayout
                            android:layout_marginLeft="15dp"
                            android:id="@+id/alivc_info_large_bar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                                <com.zhongchuang.canting.widget.ClearEditText
                                    android:id="@+id/et_comment"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:background="@drawable/white_rectange"
                                    android:layout_weight="1"
                                    android:paddingLeft="5dp"
                                    android:textColorHint="#666666"
                                    android:textSize="14sp"
                                    android:hint="@string/fsnr"
                                    />

                                <Button
                                    android:layout_marginLeft="10dp"
                                    android:id="@+id/btn_send_comment"
                                    android:text="@string/fs"
                                    android:textSize="18sp"
                                    android:textColor="#1a1a1a"
                                    android:layout_width="77dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/btn_commentbg"
                                    />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/alivc_info_small_bar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">



                        </LinearLayout>

                </FrameLayout>


                <ImageView
                    android:id="@+id/alivc_screen_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp" />

        </LinearLayout>


</merge>