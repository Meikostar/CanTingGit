<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:orientation="vertical"

    >

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.0000dp" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/blue_gradient">



            <LinearLayout
                android:layout_marginTop="40dp"
                android:id="@+id/ll_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                android:orientation="vertical"

                >


                <ImageView
                    android:id="@+id/person_pic"
                    android:layout_width="77dp"
                    android:layout_height="77dp"
                    android:src="@drawable/editor_ava" />

                <TextView
                    android:id="@+id/person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"

                    android:text="@string/qdl"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

            </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="155dp"
        android:background="@drawable/white_rectange_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">




            <LinearLayout
                android:id="@+id/ll_profit"
                android:paddingLeft="15dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="vertical">
                <TextView

                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的利润"
                    android:textColor="#555555"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/tv_profit"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#FF8400"
                    android:textSize="15sp" />




            </LinearLayout>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:background="@drawable/blue_rectangle_lines"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:text="提现"
                android:id="@+id/tv_charge"
                android:textColor="@color/blue"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_marginTop="15dp"
            android:layout_width="0.5dp"
            android:layout_height="40dp"
            android:background="@color/linecolor"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">




            <LinearLayout
                android:paddingLeft="15dp"
               android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:orientation="vertical">
                <TextView

                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="邀请码"
                    android:textColor="#555"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tv_code"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#333"
                    android:textSize="15sp" />





            </LinearLayout>
            <TextView
                android:id="@+id/tv_get"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:background="@drawable/blue_rectangle_lines"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:text="复制"
                android:textColor="@color/blue"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>
    <com.zhongchuang.canting.widget.StickyScrollView
        android:id="@+id/scrollView"
        android:layout_marginTop="245dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_bgs"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <ImageView

                    android:layout_width="19dp"
                    android:layout_height="20dp"

                    android:layout_marginLeft="1dp"
                    android:src="@drawable/money" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:singleLine="true"
                    android:text="@string/wdqb"
                    android:textColor="#333"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="0.8dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_cz"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chongzhi"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_cz"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#FF8400"
                            android:textSize="15sp" />

                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="@string/kyjf"
                            android:textColor="@color/color9"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="13dp"
                        android:src="@mipmap/arrow_right" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_gj"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0.8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="兑换值"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView

                            android:id="@+id/tv_kf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="0"
                            android:textColor="#FF8400"
                            android:textSize="15sp" />


                        <TextView

                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="可用数"
                            android:textColor="@color/color9"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="13dp"
                        android:src="@mipmap/arrow_right" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="0.8dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_lt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ll"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView

                            android:id="@+id/tv_jf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#FF8400"
                            android:textSize="15sp" />


                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/kyjf"
                            android:textColor="@color/color9"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="15dp"
                        android:layout_marginLeft="13dp"
                        android:src="@mipmap/arrow_right" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_zb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0.8dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <TextView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/zb"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_ye"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:singleLine="true"
                            android:text="0"
                            android:textColor="#FF8400"
                            android:textSize="15sp" />


                        <TextView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/kyjf"
                            android:textColor="@color/color9"
                            android:textSize="12sp" />


                    </LinearLayout>

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="13dp"
                        android:src="@mipmap/arrow_right" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <ImageView

                    android:layout_width="19dp"
                    android:layout_height="20dp"

                    android:layout_marginLeft="1dp"
                    android:src="@drawable/guanli" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:singleLine="true"
                    android:text="@string/qita"
                    android:textColor="#333"
                    android:textSize="15sp" />


            </LinearLayout>

            <com.zhongchuang.canting.widget.NoScrollGridView

                android:id="@+id/grid_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.8dp"
                android:horizontalSpacing="1dp"
                android:listSelector="@color/transparent"
                android:numColumns="4"
                android:verticalSpacing="1dp" />
        </LinearLayout>
    </com.zhongchuang.canting.widget.StickyScrollView>

</RelativeLayout>
