<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/common_bg"
    android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="177dp">
                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="177dp"
                    app:image_scale_type="fit_xy"
                    app:is_auto_play="true"/>


        </RelativeLayout>
        <android.support.v7.widget.CardView
            android:layout_marginTop="167dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/card"
            tools:targetApi="lollipop"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:stateListAnimator="@drawable/lift_on_touch"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false">
           <LinearLayout
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
                   <com.zhongchuang.canting.widget.NoScrollGridView

                       android:id="@+id/grid_content1"
                       android:layout_width="match_parent"
                       android:layout_height="190dp"
                       android:background="@color/white"
                       android:listSelector="@color/transparent"
                       android:numColumns="4"
                       android:paddingLeft="5dp"
                       android:paddingRight="5dp" />


           </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cards"
            android:layout_marginTop="370dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            tools:targetApi="lollipop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stateListAnimator="@drawable/lift_on_touch"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/ll_special"
                            android:gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:orientation="horizontal">
                                <TextView
                                    android:layout_weight="1"
                                    android:id="@+id/tv_type"
                                    android:textColor="#222"
                                    android:textSize="17sp"
                                    android:layout_marginLeft="16dp"
                                    android:text="活动专区"
                                    android:layout_width="match_parent"
                                    android:scaleType="fitXY"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    />
                                <ImageView
                                    android:layout_marginRight="12dp"
                                    android:layout_width="8dp"
                                    android:layout_height="16dp"
                                    android:src="@mipmap/arrow_right"/>
                        </LinearLayout>
                        <com.zhongchuang.canting.widget.NoScrollGridView
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:id="@+id/grid_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:listSelector="@color/transparent"
                            android:numColumns="3"
                            />

                </LinearLayout>


        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_below="@+id/cards"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/content_bg"
            android:gravity="center"
            android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="31dp"
                    android:layout_weight="1"
                    android:background="#FFD2D2D2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="31dp"
                    android:layout_marginRight="31dp"
                    android:gravity="center"
                    android:text="@string/zxsp"

                    android:textColor="@color/slow_black"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="31dp"
                    android:layout_weight="1"
                    android:background="#FFD2D2D2" />

        </LinearLayout>

</RelativeLayout>