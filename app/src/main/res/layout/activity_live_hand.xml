<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF2A93FF"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_city"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="深圳"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:id="@+id/zhuye_geren"
            android:layout_width="22dp"
            android:layout_height="29dp"
            android:src="@drawable/back_white"
            android:layout_marginRight="5dp" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:gravity="center"
                android:id="@+id/serch_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x80"
                android:background="@null"
                android:text="@string/zbph"
                android:textColor="#fff"
                android:textSize="17sp" />

        </FrameLayout>
        <RelativeLayout

            android:layout_width="0dp"
            android:layout_height="100px"
            android:layout_weight="1">
            <ImageView
                android:visibility="gone"
                android:scaleType="fitXY"
                android:layout_centerInParent="true"
                android:id="@+id/zhuye_saoyisao"
                android:layout_width="30px"
                android:layout_height="40px"
                android:src="@drawable/i22" />
        </RelativeLayout>

    </LinearLayout>
    <TextView
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:background="@color/content_bg"
        android:text="@string/azsyphmyz"
        android:textColor="#666"
        android:textSize="13sp" />
    <com.zhongchuang.canting.widget.loadingView.LoadingPager
        android:layout_weight="1"
        android:id="@+id/loadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/listview"
            android:background="@color/white"
            style="@style/lv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.zhongchuang.canting.widget.loadingView.LoadingPager>





</LinearLayout>