<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_common_item"

    android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_bg"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:background="@color/white">
            <FrameLayout
                android:id="@+id/fl_bg"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="24dp"
                android:layout_height="28dp">
                <ImageView
                    android:id="@+id/p_logo1"
                    android:layout_width="24dp"
                    android:layout_height="28dp"
                    android:src="@drawable/hand1"
                    android:scaleType="centerCrop" />
                <TextView
                    android:id="@+id/tv_count"
                     android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    tools:text="1" />
            </FrameLayout>

            <ImageView
                android:layout_toRightOf="@+id/fl_bg"
                android:id="@+id/p_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"

                android:scaleType="centerCrop" />


            <LinearLayout
                android:id="@+id/ll_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@id/p_logo"
                android:orientation="horizontal"
                android:paddingRight="14dp">

                <TextView

                    android:id="@+id/p_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/p_logo"
                    android:maxLines="1"
                    android:textColor="@color/slow_black"
                    android:textSize="15sp"
                    tools:text="" />

                <ImageView
                    android:id="@+id/iv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                 />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_name"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/p_logo"
                android:orientation="horizontal"
                android:paddingRight="14dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_toRightOf="@id/p_logo"
                    android:maxLines="1"
                    android:textColor="@color/slow_black"
                    android:textSize="15sp"
                    android:text="@string/fengsi" />

                <TextView
                    android:id="@+id/tv_care_cout"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1582"
                    android:textColor="#FF8400"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tv_care"
                    android:layout_width="60dp"
                    android:layout_height="29.5dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/selector_blue"
                    android:gravity="center"
                    android:text="@string/gz"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>



        </RelativeLayout>
        <View
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:background="@color/linecolor"/>


    </LinearLayout>


</LinearLayout>

