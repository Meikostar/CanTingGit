<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/content_bg"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="0.001dp"
        android:id="@+id/line"/>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_marginLeft="7dp"
            android:id="@+id/iv_back"
            android:layout_width="22dp"
            android:layout_height="36dp"
            android:padding="5dp"
            android:src="@drawable/fb_back" />
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView

                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="我的标签"
                android:textColor="#222"
                android:textSize="18sp" />

        </LinearLayout>
        <Button
            android:id="@+id/but_save"
            android:layout_width="wrap_content"
            android:minWidth="57.5dp"
            android:layout_height="29dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="11.5dp"
            android:background="@drawable/shape_bg_lin_cancel"
            android:text="@string/bc"
            android:textColor="@color/white" />
    </LinearLayout>

    <com.zhongchuang.canting.widget.StickyScrollView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="17dp"
                    android:text="已选标签"
                    android:textSize="13sp"
                    android:textColor="@color/color2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.zhongchuang.canting.widget.FlexboxLayout
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:id="@+id/fbl_tag1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    android:minHeight="60dp"
                    app:justifyContent="flex_start" />
                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/linecolor"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="17dp"
                    android:text="类型"
                    android:textSize="13sp"
                    android:textColor="@color/color2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.zhongchuang.canting.widget.FlexboxLayout
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:id="@+id/fbl_tag2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    android:minHeight="60dp"
                    app:justifyContent="flex_start" />
                <View
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/linecolor"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="17dp"
                    android:text="自定义"
                    android:textSize="13sp"
                    android:textColor="@color/color2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.zhongchuang.canting.widget.FlexboxLayout
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/white"
                    android:id="@+id/fbl_tag7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:flexDirection="row"
                    app:flexWrap="wrap"
                    android:minHeight="60dp"
                    app:justifyContent="flex_start" />
                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/linecolor"/>

            </LinearLayout>
        </LinearLayout>

    </com.zhongchuang.canting.widget.StickyScrollView>


</LinearLayout>
