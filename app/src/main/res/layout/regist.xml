<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y126"
        android:background="#FF2A93FF"

        >
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="13dp"
            android:src="@mipmap/tab_back_btn" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/zc"
            android:textColor="#ffffff"
            android:textSize="17sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/regist_thereTitle"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/regist_inp_phnum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/srsjhs"
            android:textColor="@color/color6"
            android:textSize="13sp"
            />

        <TextView
            android:visibility="gone"
            android:padding="@dimen/x10"
            android:id="@+id/regist_inp_chknum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2.输入验证码 >"
            android:textColor="@color/wordColor"
            android:textSize="@dimen/x35"
            />

        <TextView
            android:id="@+id/regist_inp_phpass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/szmms"
            android:textColor="@color/color6"
            android:textSize="13sp"
            />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="#FF2A93FF" />

    <FrameLayout
        android:id="@+id/regist_fragm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp">
    </FrameLayout>


</LinearLayout>