<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <com.zhongchuang.canting.bigimage.PhotoViewPager
        android:id="@+id/viewpager_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/black"></com.zhongchuang.canting.bigimage.PhotoViewPager>
    <android.support.design.widget.TabLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/tabLayout"
        android:paddingBottom="0dp"
        android:background="@color/transparent"
        app:tabIndicatorColor="@null"
        app:tabIndicatorHeight="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.design.widget.TabLayout>
  <include layout="@layout/layout_title_bar"></include>
</RelativeLayout>