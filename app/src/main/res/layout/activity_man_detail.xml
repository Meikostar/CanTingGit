<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg"
    android:orientation="vertical">

    <com.zhongchuang.canting.widget.NavigationBar
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationLeft_img="@drawable/back_white"
        app:navigationTitle="@string/xxzl" />

  <com.zhongchuang.canting.widget.StickyScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="85dp"
              android:layout_marginTop="15dp"
              android:background="@color/white"
              android:gravity="center_vertical"
              android:orientation="horizontal">

              <ImageView
                  android:id="@+id/iv_img"
                  android:layout_width="65dp"
                  android:layout_height="65dp"
                  android:layout_marginLeft="21dp" />

              <LinearLayout

                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:gravity="center_vertical"
                  android:orientation="vertical">

                  <TextView
                      android:id="@+id/tv_bei"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="15dp"
                      android:text=":"
                      android:textColor="@color/color3"
                      android:textSize="15sp" />

                  <TextView
                      android:id="@+id/tv_name"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="15dp"
                      android:layout_marginTop="12dp"
                      android:text="@string/nc"
                      android:textColor="@color/color9"
                      android:textSize="14sp" />
              </LinearLayout>

              <View
                  android:layout_width="match_parent"
                  android:layout_height="1dp"
                  android:layout_marginBottom="10dp"
                  android:layout_marginLeft="15dp"
                  android:layout_marginRight="15dp"
                  android:background="@color/linecolor" />
          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:layout_marginTop="15dp"
              android:background="@color/white"
              android:gravity="center_vertical"
              android:orientation="vertical">

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="15dp"
                      android:text="@string/dhhms"
                      android:textColor="@color/color3"
                      android:textSize="15sp" />

                  <TextView
                      android:id="@+id/tv_phone"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="28dp"
                      android:text=""
                      android:textColor="@color/color9"
                      android:textSize="15sp" />
              </LinearLayout>
              <View
                  android:layout_width="match_parent"
                  android:layout_height="0.5dp"
                  android:layout_marginLeft="15dp"
                  android:layout_marginRight="15dp"
                  android:background="@color/linecolor" />

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:background="@color/white"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="15dp"
                      android:text="@string/bz"
                      android:textColor="@color/color3"
                      android:textSize="15sp" />

                  <TextView
                      android:id="@+id/tv_info"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="25dp"
                      android:text=""
                      android:textColor="@color/color9"
                      android:textSize="14sp" />
              </LinearLayout>


          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="15dp"
              android:background="@color/white"
              android:gravity="center_vertical"
              android:orientation="vertical">


              <LinearLayout
                  android:id="@+id/ll_choose"
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:background="@color/white"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="15dp"
                      android:layout_weight="1"
                      android:text="@string/bzsz"
                      android:textColor="@color/color3"
                      android:textSize="15sp" />

                  <TextView
                      android:id="@+id/tv_group"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginRight="15dp"
                      android:text=""
                      android:textColor="@color/color3"
                      android:textSize="15sp" />

                  <ImageView
                      android:layout_width="15dp"
                      android:layout_height="15dp"
                      android:layout_marginRight="15dp"
                      android:src="@drawable/arrow_left" />
              </LinearLayout>
              <View
                  android:layout_marginLeft="15dp"
                  android:layout_marginRight="15dp"
                  android:layout_width="match_parent"
                  android:layout_height="0.3dp"
                  android:background="@color/linecolor"/>
              <RelativeLayout

                  android:id="@+id/ll_qf"
                  android:background="@color/white"
                  android:layout_width="match_parent"
                  android:layout_height="70dp"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  >
                  <TextView
                      android:id="@+id/tv_fir"
                      android:layout_centerVertical="true"
                      android:text="@string/wdllq"
                      android:layout_marginLeft="15dp"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="14sp"
                      android:textColor="@color/slow_black"/>

                  <LinearLayout
                      android:layout_marginRight="6dp"
                      android:layout_toLeftOf="@+id/imgs"
                      android:layout_centerVertical="true"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

                      <ImageView
                          android:id="@+id/img_3"
                          android:layout_marginRight="10dp"
                          android:scaleType="fitXY"

                          android:layout_width="40dp"
                          android:layout_height="40dp" />
                      <ImageView
                          android:id="@+id/img_2"
                          android:layout_marginRight="10dp"
                          android:scaleType="fitXY"

                          android:layout_width="40dp"
                          android:layout_height="40dp" />
                      <ImageView
                          android:id="@+id/img_1"
                          android:layout_marginRight="15dp"
                          android:scaleType="fitXY"
                          android:layout_width="40dp"
                          android:layout_height="40dp" />
                  </LinearLayout>
                  <ImageView
                      android:id="@+id/imgs"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="15dp"
                      android:src="@drawable/arrow_left"
                      android:layout_width="14dp"
                      android:layout_height="14dp" />
              </RelativeLayout>
          </LinearLayout>

          <TextView
              android:visibility="invisible"
              android:id="@+id/tv_send"
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:layout_marginTop="35dp"
              android:background="@drawable/login_selector"
              android:gravity="center"
              android:text="添加好友"
              android:textColor="@color/white"
              android:textSize="15sp" />
          <TextView
              android:id="@+id/tv_del"
              android:layout_width="match_parent"
              android:layout_height="45dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:layout_marginTop="6dp"
              android:background="@drawable/hui_selector"
              android:gravity="center"
              android:text="@string/del"
              android:textColor="@color/white"
              android:textSize="15sp" />
      </LinearLayout>
  </com.zhongchuang.canting.widget.StickyScrollView>


</LinearLayout>