<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_edit_new_goods_comment_area"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/white"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/linecolor"/>
    <Button
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/btn_send_comment"
        android:text="@string/fs"
        android:textSize="13sp"
        android:textColor="#fff"
        android:layout_width="60dp"
        android:layout_marginBottom="5dp"
        android:layout_height="29dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_bg_lin_cancel"
        />
    <com.zhongchuang.canting.widget.ClearEditText
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/et_comment"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@id/btn_send_comment"
        android:layout_height="30dp"
        android:layout_marginLeft="6dp"
        android:background="@drawable/alivc_send_bg"
        android:layout_weight="1"
        android:paddingLeft="8dp"
        android:textColorHint="#666666"
        android:textSize="13sp"
        android:hint="@string/fsnr"
        />

</RelativeLayout>