<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_edit_new_goods_comment_area"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/background"
    >
    <Button
        android:layout_marginLeft="10dp"
        android:id="@+id/btn_send_comment"
        android:text="@string/fs"
        android:textSize="18sp"
        android:textColor="#1a1a1a"
        android:layout_width="77dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/btn_commentbg"
        />
    <com.zhongchuang.canting.widget.ClearEditText
        android:id="@+id/et_comment"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@id/btn_send_comment"
        android:layout_height="40dp"
        android:background="@color/white"
        android:layout_weight="1"
        android:paddingLeft="5dp"
        android:textColorHint="#666666"
        android:textSize="14sp"
        android:hint="@string/fsnr"
        />

</RelativeLayout>