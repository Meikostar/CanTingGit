<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg">
    <com.zhongchuang.canting.widget.NavigationBar
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationTitle="@string/fbllq"
        app:navigationRight_type="txt"
        app:navigationRight_txt=""/>

  <com.zhongchuang.canting.widget.StickyScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
          <RelativeLayout
              android:layout_marginTop="12dp"
              android:background="@color/white"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="135dp">

              <LinearLayout

                  android:layout_marginLeft="15dp"
                  android:layout_marginRight="14dp"
                  android:layout_width="match_parent"
                  android:layout_height="150dp">
                  <com.zhongchuang.canting.widget.ClearEditText
                      android:textColorHint="@color/color9"

                      android:id="@+id/et_content"
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:minHeight="50dp"
                      android:background="@null"
                      android:gravity="center_vertical"
                      android:hint="@string/fxndmhsk"
                      android:textSize="13.5sp"
                      android:textColor="@color/slow_black" />

              </LinearLayout>
              <View
                  android:layout_alignParentBottom="true"
                  android:layout_width="match_parent"
                  android:layout_height="0.3dp"
                  android:background="@color/linecolor"
                  android:layout_marginLeft="15dp"/>
          </RelativeLayout>

          <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white">
              <LinearLayout

                  android:id="@+id/ll_bg"
                  android:layout_width="match_parent"
                  android:layout_height="108dp"
                  android:layout_gravity="center_vertical"
                  android:background="@color/white"
                  android:orientation="vertical">

                  <ImageView
                      android:layout_marginLeft="15dp"
                      android:id="@+id/iv_add_photo"
                      android:layout_width="74dp"
                      android:layout_height="74dp"
                      android:layout_marginBottom="15dp"
                      android:layout_marginTop="15dp"
                      android:src="@drawable/addmoretp" />
              </LinearLayout>
              <RelativeLayout
                  android:visibility="gone"
                  android:layout_marginLeft="15dp"
                  android:id="@+id/rl_bg"
                  android:layout_width="150dp"
                  android:layout_height="wrap_content"
                  android:layout_marginRight="@dimen/margin_chat_activity"

                  android:background="@drawable/wite_rectangle3"
                  >

                  <ImageView
                      android:id="@+id/iv_video_cover"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:scaleType="fitXY" />


                  <ImageView
                      android:id="@+id/chatting_status_btn"
                      android:clickable="false"
                      android:layout_width="40dp"
                      android:layout_height="40dp"
                      android:layout_centerInParent="true"
                      android:background="@drawable/ease_video_play_btn_small_nor" />
                  <ImageView
                      android:src="@mipmap/close"

                      android:layout_alignParentRight="true"

                      android:id="@id/iv_close"

                      android:layout_width="28dp"
                      android:layout_height="28dp"

                      />
              </RelativeLayout>
              <com.zhongchuang.canting.widget.ImageUploadView
                  android:id="@+id/piuv_remark_image"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="5.7dp"
                  android:visibility="gone" />
          </FrameLayout>



          <TextView

              android:layout_marginBottom="35dp"
              android:background="@drawable/login_selector"
              android:id="@+id/txt_send"
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:layout_marginTop="30dp"
              android:gravity="center"
              android:text="@string/fb"
              android:textColor="@color/white"
              android:textSize="@dimen/textsize_big" />
      </LinearLayout>
  </com.zhongchuang.canting.widget.StickyScrollView>
    <View

        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:id="@+id/ll_bottom_button"/>
</LinearLayout>