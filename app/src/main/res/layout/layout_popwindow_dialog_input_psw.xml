<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/rootLayout"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"

        android:background="@drawable/jrmf_wp_dialog_paytype_bg"

        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="53dp">

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/tv_pay_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="请支付"
                android:textColor="#323232"
                android:textSize="16sp"/>

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginRight="6dp"
                android:layout_alignParentRight="true"
                android:id="@+id/iv_exit"
                android:layout_width="33dp"
                android:padding="6dp"
                android:layout_height="33dp"
                android:layout_gravity="left"
                android:src="@drawable/closes"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c9c9c9"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:gravity="center">



                <TextView
                    android:id="@+id/tv_pay_amount"
                    android:textColor="#3e3a39"

                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_marginLeft="1dp"
                    android:gravity="center"
                    android:text=""
                    android:textSize="35sp"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="8dp"
                    android:text="兑换值"
                    android:textColor="#323232"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#c9c9c9"/>

        <LinearLayout
            android:id="@+id/layout_paytype"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="8dp">

            <ImageView
                android:id="@+id/iv_paytype_icon"
                android:layout_width="22dip"
                android:layout_height="22dip"/>

            <TextView
                android:id="@+id/tv_paytype_name"
                android:layout_width="0dip"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:text="乐聊兑换值支付"
                android:textColor="#323232"
                android:textSize="14sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jrmf_wp_ic_arrow"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#c9c9c9"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <Button
                android:id="@+id/btn_pay"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/jrmf_wp_selector_btn_pay"
                android:text="立即支付"
                android:visibility="gone"/>

            <com.zhongchuang.canting.widget.pswpop.PswView
                android:id="@+id/pswView"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_forget_pswd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:padding="3dip"
            android:text="忘记支付密码"
            android:textColor="#00b7ee"
            android:textSize="10sp"/>

    </LinearLayout>
    <LinearLayout

        android:id="@+id/pop_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="输入支付密码"
            android:textColor="#000000"
            android:textSize="14sp"/>



        <View
            android:layout_marginTop="15dp"
            android:background="#dedede"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <GridView
            android:background="#dedede"
            android:horizontalSpacing="1dp"
            android:verticalSpacing="1dp"

            android:id="@+id/gridView"
            android:numColumns="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>