<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:background="@color/white"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp">


        <ImageView
            android:id="@+id/shop_img_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="#3c9333"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/shop_name_one"
            android:layout_below="@id/shop_img_one"
            android:layout_marginTop="5dp"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_57"
            android:textSize="@dimen/sp_14"
            android:text=""
            android:maxLines="2"/>

        <TextView
            android:id="@+id/shop_price_one"
            android:layout_below="@id/shop_name_one"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/original"
            android:textSize="@dimen/sp_12"
            android:text=""
             />


</LinearLayout>