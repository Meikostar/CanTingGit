<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
>
<RelativeLayout
    android:background="@drawable/chat_red_s2"
    android:layout_centerInParent="true"
    android:layout_width="271dp"
    android:layout_height="350dp">

    <ImageView
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/chat_red_s3"
        android:id="@+id/iv_close"
        android:layout_width="25dp"
        android:layout_height="25dp"/>


    <ImageView
        android:id="@+id/iv_header"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/iv_close"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"

        />


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="#FFF3E7AD"
        android:textSize="18sp"
        tools:text=""/>


    <TextView

        android:id="@+id/tv_send_rp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="给你发了一个红包"
        android:maxLines="1"

        android:textColor="#FFF3E7AD"
        android:textSize="14sp"
        />

    <TextView
        android:id="@+id/tv_no_rp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_send_rp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/gxfadadl"
        android:textColor="#FFF3E7AD"
        android:textSize="20sp"

        />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_send_rp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/jrmf_b_white"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="18sp"
        android:visibility="invisible"
        tools:text="恭喜发财,大吉大利恭喜发财,大吉大利恭喜发财,大吉大利"
        />

    <ImageView
        android:id="@+id/iv_open_rp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/tv_tip"
        android:layout_centerHorizontal="true"
        android:src="@drawable/chat_red_s1"
        android:layout_marginTop="20dp"
    />
   <LinearLayout
       android:layout_below="@id/iv_open_rp"
       android:layout_marginTop="20dp"
       android:gravity="center_horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <TextView
           android:id="@+id/tv_look_others"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:drawablePadding="5dp"

           android:layout_centerHorizontal="true"
           android:text="@string/kkdjdsq"
           android:textSize="14sp"
           android:textColor="#FFF3E7AD"/>
       <ImageView
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="4dp"
           android:layout_width="9dp"
           android:layout_height="15dp"
           android:src="@drawable/chat_red_s4"/>
   </LinearLayout>

</RelativeLayout>
</RelativeLayout>











