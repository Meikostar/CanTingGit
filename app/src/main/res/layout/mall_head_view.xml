<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="208dp">

        <com.zhongchuang.canting.widget.banner.BannerView
            android:id="@+id/bannerView"
            android:layout_width="match_parent"
            android:layout_height="208dp"
            app:bannerAnimDuration="1500"
            app:bannerAnimScroll="true"
            app:bannerAutoScroll="true"
            app:bannerPageAlpha="1.0"
            app:bannerPageMargin="8dp"
            app:bannerPagePercent="1"
            app:bannerPageScale="1"
            app:bannerScrollDuration="4000" />

    </RelativeLayout>


    <com.zhongchuang.canting.widget.NoScrollGridView

        android:id="@+id/grid_content"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/white"
        android:listSelector="@color/transparent"
        android:numColumns="4"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <LinearLayout
        android:id="@+id/ll_special"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/special1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="31dp"
            android:gravity="center"
            android:text="@string/hdzqs"
            android:textColor="#064BD7"
            android:textSize="30sp" />
        <LinearLayout

            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/zxsp"
                android:textColor="#064BD7"
                android:textSize="10sp" />
            <ImageView
                android:src="@drawable/arrow_right_blue"
                android:layout_marginLeft="4dp"
                android:layout_width="5dp"
                android:layout_height="8dp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/content_bg"
        android:gravity="center"
        android:orientation="horizontal">
<ImageView
    android:id="@+id/iv_go"
    android:layout_width="225dp"
    android:layout_height="75dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/content_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="31dp"
            android:layout_weight="1"
            android:background="#FFD2D2D2" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="31dp"
            android:gravity="center"
            android:text="@string/zxsp"

            android:textColor="@color/slow_black"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="31dp"
            android:layout_weight="1"
            android:background="#FFD2D2D2" />

    </LinearLayout>

</LinearLayout>