<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="205dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:background="@drawable/chat_mine_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/back_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/chat_back" />



            </RelativeLayout>

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/person_photo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/editor_ava" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/y30"
            android:background="@color/bg_f5" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="95dp"
                android:layout_height="match_parent"

                android:gravity="center_vertical|right"
                android:text="@string/ncs"
                android:textColor="@color/text_color_57"
                android:textSize="@dimen/sp_16" />


            <EditText
                android:id="@+id/nick_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@null"
                android:hint="@string/qsrnc"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/text_color_57"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_f5" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="@string/sjhm"
                android:textColor="@color/text_color_57"
                android:textSize="@dimen/sp_16" />


            <TextView
                android:id="@+id/id_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:textColor="@color/text_color_57"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="@string/xb"
                android:textColor="@color/text_color_57"
                android:textSize="@dimen/sp_16" />


            <RadioGroup
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="15dp">

                <RadioButton
                    android:shadowColor="@color/blue"
                    android:id="@+id/radio_man"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:text="@string/nan"
                    android:textColor="@color/color6"
                    android:textSize="@dimen/sp_16" />

                <RadioButton
                    android:shadowColor="@color/blue"
                    android:id="@+id/radio_woman"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/nv"
                    android:textColor="@color/color6"
                    android:textSize="@dimen/sp_16" />
            </RadioGroup>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_f5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:text="@string/srs"
                android:textColor="@color/text_color_57"
                android:textSize="@dimen/sp_16" />


            <TextView
                android:id="@+id/bridthday_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/qxzndsr"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/text_color_57"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_f5" />




        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_f5" />
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_first"
            android:layout_marginTop="35dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginBottom="25dp"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/tishi" />
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="15dp"
                    android:textSize="12sp"
                    android:lineSpacingExtra="3dp"
                    android:text="@string/nczyyyysc"
                    android:textColor="#999" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="25dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_sva"
                    android:layout_width="130dp"
                    android:layout_height="38dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/blue_rectangle"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:text="@string/txbbc"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/tv_next"
                    android:layout_width="130dp"
                    android:layout_height="38dp"
                    android:textSize="13sp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/huiab_rectangle"
                    android:gravity="center"
                    android:text="@string/yhzs"
                    android:textColor="#fff" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_marginRight="35dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="75dp"
            android:id="@+id/save_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/login_selector"
            android:text="@string/bc"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

    </LinearLayout>
</ScrollView>
