<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:background="@drawable/wite_rectangle3"
    android:layout_height="320dp">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/closes"
            android:padding="4dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="13dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="@string/zfxz"
            android:textColor="@color/color3"
            android:textSize="18sp" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/linecolor"/>
  <LinearLayout
      android:orientation="vertical"
      android:gravity="center"
      android:layout_width="match_parent"
      android:layout_height="match_parent">
      <LinearLayout
          android:id="@+id/ll_lel"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="@color/white"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <ImageView
              android:src="@drawable/chat_ptype1"
              android:layout_marginLeft="13dp"
              android:layout_width="30dp"
              android:layout_height="30dp" />
          <TextView
              android:layout_weight="1"
              android:id="@+id/tv_lel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="5dp"
              android:gravity="center_vertical"
              android:text="@string/lljf"
              android:textColor="@color/color3"
              android:textSize="15sp" />

          <com.zhongchuang.canting.widget.MCheckBox
              android:layout_marginRight="10dp"
              android:id="@+id/iv_type1"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_centerVertical="true"
              android:layout_gravity="center_vertical"
              android:clickable="false"
              android:padding="11dp"
              app:canNoClick="false"
              app:isCheckeds="true"
              app:drawablechoose="@drawable/kehugou"
              app:drawables="@drawable/black_line_roud_light"
              />
      </LinearLayout>
      <View
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_width="match_parent"
          android:layout_height="0.2dp"
          android:background="@color/linecolor"/>
      <LinearLayout
          android:id="@+id/ll_zb"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="@color/white"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <ImageView
              android:src="@drawable/chat_ptype2"
              android:layout_marginLeft="13dp"
              android:layout_width="30dp"
              android:layout_height="30dp" />
          <TextView
              android:id="@+id/tv_zb"
              android:layout_weight="1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="5dp"
              android:gravity="center_vertical"
              android:text="@string/zbjf"
              android:textColor="@color/color3"
              android:textSize="15sp" />

          <com.zhongchuang.canting.widget.MCheckBox
              android:layout_marginRight="10dp"
              android:id="@+id/iv_type2"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_centerVertical="true"
              android:layout_gravity="center_vertical"
              android:clickable="false"
              android:padding="11dp"
              app:canNoClick="false"
              app:drawablechoose="@drawable/kehugou"
              app:drawables="@drawable/black_line_roud_light"
              />
      </LinearLayout>
      <View
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_width="match_parent"
          android:layout_height="0.2dp"
          android:background="@color/linecolor"/>
      <LinearLayout
          android:id="@+id/ll_qk"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="@color/white"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <ImageView
              android:src="@drawable/chat_ptype3"
              android:layout_marginLeft="13dp"
              android:layout_width="30dp"
              android:layout_height="30dp" />
          <TextView
              android:id="@+id/tv_qk"
              android:layout_weight="1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="5dp"
              android:gravity="center_vertical"
              android:text="@string/qkb"
              android:textColor="@color/color3"
              android:textSize="15sp" />

          <com.zhongchuang.canting.widget.MCheckBox
              android:layout_marginRight="10dp"
              android:id="@+id/iv_type3"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_centerVertical="true"
              android:layout_gravity="center_vertical"
              android:clickable="false"
              android:padding="11dp"
              app:canNoClick="false"
              app:drawablechoose="@drawable/kehugou"
              app:drawables="@drawable/black_line_roud_light"
              />
      </LinearLayout>
      <View
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_width="match_parent"
          android:layout_height="0.2dp"
          android:background="@color/linecolor"/>
      <LinearLayout
          android:id="@+id/ll_cz"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="@color/white"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <ImageView
              android:src="@drawable/chat_ptype4"
              android:layout_marginLeft="13dp"
              android:layout_width="30dp"
              android:layout_height="30dp" />
          <TextView
              android:id="@+id/tv_cz"
              android:layout_weight="1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="8dp"
              android:layout_marginRight="5dp"
              android:gravity="center_vertical"
              android:text="@string/czjf"
              android:textColor="@color/color3"
              android:textSize="15sp" />

          <com.zhongchuang.canting.widget.MCheckBox
              android:layout_marginRight="10dp"
              android:id="@+id/iv_type4"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_centerVertical="true"
              android:layout_gravity="center_vertical"
              android:clickable="false"
              android:padding="11dp"
              app:canNoClick="false"
              app:drawablechoose="@drawable/kehugou"
              app:drawables="@drawable/black_line_roud_light"
              />
      </LinearLayout>
      <View
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"
          android:layout_width="match_parent"
          android:layout_height="0.2dp"
          android:background="@color/linecolor"/>
  </LinearLayout>

</LinearLayout>