<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/content_bg">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_bg"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"

                android:layout_height="match_parent"

                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="收货人："
                        tools:text="收货人： 张三"
                        android:textColor="@color/slow_black"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_marginRight="15dp"
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电话号码："
                        tools:text="电话号码： 1815232654"
                        android:textColor="@color/slow_black"
                        android:textSize="14sp" />
                </LinearLayout>


                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    tools:text="收货地址：广东省深圳市龙华新区"
                    android:textColor="#333"
                    android:textSize="13sp" />


                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22.5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_marginRight="15dp"
                        android:background="@color/linecolor"
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                  />

                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="4dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/ll_bgs"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <com.zhongchuang.canting.widget.MCheckBox
                            android:layout_marginLeft="4dp"
                            android:id="@+id/iv_choose"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:clickable="false"
                            android:padding="11dp"
                            app:isCheckeds="true"
                            app:canNoClick="true"
                            app:drawablechoose="@drawable/address_check"
                            app:drawables="@drawable/address_checks" />
                        <TextView

                            android:text="@string/swmr"
                            android:textColor="@color/color3"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout

                        android:layout_weight="1"
                         android:id="@+id/ll_bj"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">
                        <ImageView
                            android:src="@drawable/bainji"
                            android:layout_width="15dp"
                            android:layout_height="16.5dp"
                         />
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:text="@string/bj"
                            android:textColor="@color/color3"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_del"
                        android:layout_marginLeft="28dp"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:src="@drawable/delecte"
                            android:layout_width="15dp"
                            android:layout_height="16.5dp"
                            />
                        <TextView
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="10dp"
                            android:text="@string/del"
                            android:textColor="@color/color3"
                            android:textSize="13sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>



    </RelativeLayout>
</LinearLayout>