<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_bg">

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y126"
        android:background="@color/coofeColor">


        <ImageView
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:id="@+id/back"
            android:layout_width="22dp"
            android:layout_height="29dp"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow_left_white" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/qlsz"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="16dp"
            android:padding="8.2dp"

            android:text="确定"
            android:textColor="#fff" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
                <com.zhongchuang.canting.easeui.widget.GridViewInScroll
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    android:paddingLeft="15dp"
                    android:padding="15dp"
                    android:numColumns="4"
                    android:verticalSpacing="10dp"
                    android:listSelector="#00000000"
                    android:id="@+id/member_grid"
                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/content_bg"/>


            <LinearLayout
                android:background="@color/white"
                android:id="@+id/ll_name"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/qlmc"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/slow_black"
                    android:textSize="15.5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginRight="12dp"
                    android:id="@+id/tv_name"
                    android:text=""
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/slow_black"
                    android:textSize="13.5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/iv_arrows"
                    android:src="@drawable/arrow_left"
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:layout_marginRight="13dp"/>
            </LinearLayout>

            <View
                android:layout_marginLeft="13dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/linecolor" />
            <LinearLayout

                android:background="@color/white"
                android:id="@+id/ll_code"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/qewm"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/slow_black"
                    android:textSize="15.5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView

                    android:src="@drawable/arrow_left"
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:layout_marginRight="13dp"/>
            </LinearLayout>

            <View
                android:layout_marginLeft="13dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/linecolor" />
            <LinearLayout

                android:background="@color/white"
                android:id="@+id/ll_nick"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/wzbqdnc"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/slow_black"
                    android:textSize="15.5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginRight="12dp"
                    android:id="@+id/tv_nick"
                    android:text=""
                    android:layout_marginLeft="16dp"
                    android:textColor="@color/slow_black"
                    android:textSize="13.5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView

                    android:src="@drawable/arrow_left"
                    android:layout_width="8dp"
                    android:layout_height="13dp"
                    android:layout_marginRight="13dp"/>
            </LinearLayout>


                <View
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/linecolor"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:id="@+id/news_set_module">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bujieshouxiaoxi"
                        android:layout_marginLeft="15dp"
                        android:textSize="14sp"
                        android:textColor="#333"
                        />
                    <com.zhongchuang.canting.easeui.widget.EaseSwitchButton
                        android:id="@+id/bt_switch_news"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                    />
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:background="@drawable/login_selector"
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="@string/tcql"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>