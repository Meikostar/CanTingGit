<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/regist_check_phoneyanzhen"

        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y60"
        android:gravity="center"
        android:hint="@string/qsryzm"
        android:singleLine="true"
        android:textColor="#575458"
        android:textSize="@dimen/x35" />

    <TextView

        android:id="@+id/regist_check_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/y60"
        android:gravity="center"
        android:text="@string/yz"
        android:textColor="#575458"
        android:textSize="@dimen/x35" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x40">


        <ImageView
            android:id="@+id/regist_ps_xieyi_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/x40"
         />


        <TextView
            android:layout_toRightOf="@+id/regist_ps_xieyi_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:text="登录即为同意《用户协议》"
            android:textColor="#575458"
            android:textSize="@dimen/x20"

            />





    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x60"
        android:layout_marginTop="@dimen/y170"

        >
        <View

            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:background="#FF2A93FF" />

        <TextView
            android:background="#FFFFFF"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:text="      第三方登录     "
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>



    <LinearLayout
        android:visibility="gone"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView

            android:id="@+id/regisit_yanzhen_weixin"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:id="@+id/regisit_yanzhen_qq"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/regisit_yanzhen_weibo"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            />


    </LinearLayout>
</LinearLayout>