<?xml version="1.0" encoding="utf-8"?>
<com.zhongchuang.canting.widget.StickyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/content_bg"
    android:orientation="vertical"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/blue_gradient"
            android:orientation="vertical"
            >


            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <RelativeLayout
                android:layout_marginBottom="40dp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:id="@+id/rl_bg"
                >

                <com.zhongchuang.canting.widget.CircleImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/person_pic"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp" />

                <LinearLayout
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/person_pic"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView

                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/fjmc"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_marginTop="9dp"
                        android:layout_below="@+id/tv_name"
                        android:id="@+id/tv_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/zbbt"
                        android:textColor="#ffffff"
                        android:textSize="14sp" />
                </LinearLayout>


            </RelativeLayout>


        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_marginTop="150dp"
            android:id="@+id/card1"
            tools:targetApi="lollipop"
            android:layout_width="match_parent"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_height="80dp"
            android:stateListAnimator="@drawable/lift_on_touch"

            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="6dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_user"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:maxWidth="150dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/kyjf"
                                android:textColor="@color/black"
                                android:textSize="14sp" />
                            <TextView
                                android:layout_marginLeft="15dp"
                                android:id="@+id/tv_jf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#FF8400"
                                android:textSize="30sp" />


                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_submit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="15dp"
                            android:background="@drawable/shape_bg_lin_cancel"
                            android:padding="6dp"
                            android:text="@string/ljtq"
                            android:textColor="@color/white"
                            android:textSize="13.5sp" />

                    </LinearLayout>




                </LinearLayout>



            </LinearLayout>

        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_below="@+id/card1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="18dp"
                android:layout_marginTop="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zyzbkyjfcn"
                android:textColor="@color/color9"
                android:textSize="11sp" />
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@color/white"
                android:orientation="horizontal">



                <com.zhongchuang.canting.widget.Custom_ProfileOrderClickBtn
                    android:id="@+id/btn_care"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:btn_order_icon="@drawable/live_mine5"
                    app:btn_order_txt="@string/gzwdr" />

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/linecolor" />

                <com.zhongchuang.canting.widget.Custom_ProfileOrderClickBtn
                    android:id="@+id/btn_cares"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:btn_order_icon="@drawable/live_mine6"
                    app:btn_order_txt="@string/wgzdzb" />

                <View
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/linecolor" />

                <com.zhongchuang.canting.widget.Custom_ProfileOrderClickBtn
                    android:id="@+id/tv_all"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:btn_order_icon="@drawable/live_mine7"
                    app:btn_order_txt="@string/zbphb" />
                <View
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/linecolor" />

                <com.zhongchuang.canting.widget.Custom_ProfileOrderClickBtn
                    android:id="@+id/tv_gift"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:btn_order_icon="@drawable/gifts"
                    app:btn_order_txt="@string/lwmx" />

            </LinearLayout>

           <LinearLayout
               android:layout_marginTop="8dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:background="@color/white">
               <RelativeLayout

                   android:id="@+id/ll_total"
                   android:layout_width="fill_parent"
                   android:layout_height="45dp"
                   android:background="@color/white"
                   android:paddingLeft="14dp">


                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerVertical="true"
                       android:text="@string/zbmx"
                       android:textColor="@color/slow_black"
                       android:textSize="15sp" />
                   <TextView
                       android:layout_centerVertical="true"
                       android:layout_marginRight="45dp"
                       android:layout_alignParentRight="true"
                       android:id="@+id/tv_jfs"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text=""
                       android:textColor="#FF8400"
                       android:textSize="16sp" />
                   <ImageView
                       android:layout_width="14dp"
                       android:layout_height="14dp"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:layout_marginRight="13dp"
                       android:src="@mipmap/arrow_right" />

               </RelativeLayout>

               <View
                   android:layout_width="match_parent"
                   android:layout_height="0.3dp"
                   android:background="@color/linecolor"
                   android:layout_marginLeft="16dp"/>
               <RelativeLayout

                   android:id="@+id/rl_hand"
                   android:layout_width="fill_parent"
                   android:layout_height="45dp"
                   android:background="@color/white"
                   android:paddingLeft="14dp">


                   <TextView
                       android:id="@+id/tv_content"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerVertical="true"
                       android:text="上传视频记录"
                       android:textColor="@color/slow_black"
                       android:textSize="15sp" />

                   <ImageView
                       android:layout_width="14dp"
                       android:layout_height="14dp"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:layout_marginRight="13dp"
                       android:src="@mipmap/arrow_right" />

               </RelativeLayout>
           </LinearLayout>

             <LinearLayout
                 android:layout_marginTop="40dp"
                 android:layout_width="match_parent"
                 android:gravity="center"
                 android:layout_height="wrap_content">
                 <RelativeLayout

                     android:layout_gravity="center_horizontal"
                     android:layout_centerVertical="true"

                     android:layout_width="75dp"
                     android:layout_height="75dp">
                     <ImageView
                         android:layout_width="70dp"
                         android:layout_height="70dp"
                         android:src="@drawable/lives_bg" />

                     <TextView
                         android:id="@+id/tv_videos"
                         android:layout_width="69dp"
                         android:layout_height="70dp"
                         android:gravity="center"
                         android:text="屏内\n直播"
                         android:textColor="@color/white"
                         android:textSize="15sp" />

                 </RelativeLayout>
                 <RelativeLayout
                     android:layout_marginLeft="30dp"
                     android:id="@+id/rl_live"
                     android:layout_gravity="center_horizontal"
                     android:layout_centerVertical="true"

                     android:layout_width="75dp"
                     android:layout_height="75dp">
                     <ImageView
                         android:layout_width="70dp"
                         android:layout_height="70dp"
                         android:src="@drawable/live_mine2" />
                     <TextView
                         android:gravity="center"
                         android:id="@+id/tv_application"
                         android:layout_width="70dp"
                         android:layout_height="70dp"
                         android:text="@string/kqzb"
                         android:textColor="@color/white"
                         android:textSize="15sp" />

                 </RelativeLayout>
                 <RelativeLayout
                     android:layout_marginLeft="30dp"
                     android:layout_gravity="center_horizontal"
                     android:layout_centerVertical="true"

                     android:layout_width="75dp"
                     android:layout_height="75dp">
                     <ImageView
                         android:layout_width="70dp"
                         android:layout_height="70dp"
                         android:src="@drawable/lives_bg" />
                     <TextView
                         android:gravity="center"
                         android:id="@+id/tv_video"
                         android:layout_width="70dp"
                         android:layout_height="70dp"
                         android:text="@string/kqlb"
                         android:textColor="@color/white"
                         android:textSize="15sp" />

                 </RelativeLayout>
             </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</com.zhongchuang.canting.widget.StickyScrollView>
