<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
       android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/top_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="26dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:background="@drawable/bg_round_black30"
            android:orientation="horizontal">

            <com.zhongchuang.canting.widget.CircleImageView
                android:id="@+id/iv_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/default_head" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <TextView
                    android:layout_marginRight="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_name"
                    android:text="直播"
                    android:textColor="@android:color/white"
                    android:textSize="11sp" />

                <TextView
                    android:layout_marginTop="3dp"
                    android:id="@+id/tv_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线人数：0"
                    android:textColor="@android:color/white"
                    android:textSize="11sp" />
            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_care"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_round_pink"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="关注"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/top_bar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true">
            <TextView
                android:visibility="gone"
                android:id="@+id/answer_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_oval"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:clickable="true"
                android:text="@string/answer"/>
            <ImageView
                android:id="@+id/beauty_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/zhibo3"
                android:layout_marginRight="12dp"
                android:clickable="true"/>
            <ImageView
                android:id="@+id/music"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/zhubo"
                android:layout_marginRight="12dp"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/flash"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/zhibo5"
                android:layout_marginRight="12dp"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/camera"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/zhibo4"
                android:clickable="true"/>
            <ImageView
                android:layout_marginLeft="12dp"
                android:id="@+id/exit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/zhubo2"/>
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:id="@+id/push_url_layout"
        android:layout_below="@+id/top_bar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="@string/push_url"/>
        <TextView
            android:id="@+id/push_url"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/push_url_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="@string/ispushing"/>
        <TextView
            android:id="@+id/isPushing"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

    </LinearLayout>

    <LinearLayout

        android:id="@+id/ll_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@drawable/shap_gradient"
        android:orientation="horizontal">
        <Button
            android:id="@+id/preview_button"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:maxLines="2"
            android:background="@null"
            android:ellipsize="end"
            android:textColor="@color/text_white"
            android:text="@string/stop_preview_button"/>

        <Button
            android:id="@+id/opera_button"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:maxLines="2"
            android:ellipsize="end"
            android:background="@null"
            android:textColor="@color/text_white"
            android:text="@string/pause_button"/>
        <Button
            android:id="@+id/restart_button"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:maxLines="2"
            android:ellipsize="end"
            android:background="@null"
            android:textColor="@color/text_white"
            android:text="@string/repush_button"/>
        <Button
            android:id="@+id/more"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:maxLines="2"
            android:ellipsize="end"
            android:background="@null"
            android:textColor="@color/text_white"
            android:text="@string/more_setting_button"/>

    </LinearLayout>
    <Button
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/push_button"
        android:layout_height="35dp"
        android:layout_width="65dp"
        android:background="@drawable/bg_round_black30"

        android:textSize="12sp"
        android:textColor="@color/white"
        android:text="@string/start_button"/>
    <LinearLayout
        android:id="@+id/guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/line"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/slide_left_view_log"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/slide_right_view_log_char"/>
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:id="@+id/container"
        android:layout_marginBottom="20dp"
        />
    <com.zhongchuang.canting.widget.GiftItemView
        android:id="@+id/gift_item_first"
        android:layout_marginBottom="190dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:clipChildren="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.zhongchuang.canting.widget.GiftItemView>
    <tyrantgit.widget.HeartLayout
        android:id="@+id/heart_layout"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>