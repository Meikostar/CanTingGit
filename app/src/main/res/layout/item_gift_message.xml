<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:maxWidth="360dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="220dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/bg_round_black30"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"

            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.zhongchuang.canting.widget.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/avatar_size36"
                android:layout_height="@dimen/avatar_size36"
                android:layout_margin="2dp"
                />

            <LinearLayout
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/avatar"
                android:orientation="horizontal"
                android:paddingLeft="8dp">

                <TextView

                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#5EB9FF"
                    android:textSize="18sp" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/gift_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="送给主播"

                    android:textColor="#ffffff"
                    android:textSize="15sp" />
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/gift_type"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="right"
            android:layout_toRightOf="@+id/info"
            android:scaleType="fitXY"
     />
    </FrameLayout>

    <TextView
        android:id="@+id/gift_num"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="x12"
        android:paddingBottom="5dp"
        android:textColor="#ffff00"
        android:textSize="30sp"
        android:textStyle="bold" />
</LinearLayout>