<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

   <View
       android:layout_width="match_parent"
       android:layout_height="0.01dp"
       android:id="@+id/line"/>
    <com.zhongchuang.canting.widget.StickyScrollView
        android:id="@+id/scrollView"
        android:layout_marginBottom="53dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/content_bg"
        android:fillViewport="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="336dp">

                <com.zhongchuang.canting.widget.banner.BannerView
                    android:id="@+id/bannerView"
                    android:layout_width="match_parent"
                    android:layout_height="336dp"
                    app:bannerAnimDuration="1500"
                    app:bannerAnimScroll="true"
                    app:bannerAutoScroll="true"
                    app:bannerPageAlpha="1.0"
                    app:bannerPageMargin="8dp"
                    app:bannerPagePercent="1"
                    app:bannerPageScale="1"
                    app:bannerScrollDuration="4000" />



            </RelativeLayout>

            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    tools:text="￥ 89.0"
                    android:textColor="@color/original"
                    android:textSize="15sp" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/rl_bgs"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/tv_mark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="15dp"
                            android:text="送贡献值:"
                            android:textColor="@color/color9"
                            android:textSize="13sp" />



                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_mark"
                            android:id="@+id/tv_price_mark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="3dp"
                            android:textColor="@color/color9"
                            android:textSize="13sp"
                            tools:text="￥ rrr.0" />
                        <View
                            android:layout_marginLeft="15dp"
                            android:visibility="gone"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_mark"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="30dp"
                            android:layout_height="2dp"
                            android:background="@color/linecolor"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_marginLeft="5dp"

                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/tv_marks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="15dp"
                            android:text="送兑换值:"
                            android:textColor="@color/color9"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_marks"
                            android:id="@+id/tv_profit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:paddingLeft="1dp"
                            android:textColor="@color/color9"
                            android:textSize="13sp"
                            tools:text="￥ rrr.0" />


                    </RelativeLayout>
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="20dp"
                    android:singleLine="true"

                    tools:text="商品的名称 :这里是接着是产品的详细描述估计最大就是两行最大就是两行"
                    android:textColor="@color/slow_black"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:lineSpacingExtra="2dp"

                        android:layout_centerVertical="true"
                        android:id="@+id/tv_turn"
                        android:maxWidth="170dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:layout_marginLeft="15dp"
                        android:text="@string/kds"
                        android:textColor="@color/color6"
                        android:paddingRight="15dp"
                        android:textSize="13sp" />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_detail"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_turn"
                        android:textColor="@color/blue"
                        android:textSize="12sp"
                        android:text="详情"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_alignParentRight="true"
                        android:gravity="left"
                        android:lines="2"
                        android:id="@+id/tv_address"
                        android:maxWidth="120dp"
                        android:layout_centerVertical="true"
                        android:lineSpacingExtra="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="135dp"
                        android:layout_marginRight="15dp"
                        tools:text=""
                        android:text="@string/fhdzs"
                        android:textColor="@color/color6"
                        android:textSize="13sp" />
                </RelativeLayout>
                <View
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/linecolor"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>


                <LinearLayout
                    android:id="@+id/ll_reg"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="15dp"
                        android:text="@string/ggcs"

                        android:textColor="@color/slow_black"
                        android:textSize="13sp" />

                    <ImageView
                        android:layout_marginRight="20dp"
                        android:layout_width="7dp"
                        android:layout_height="12dp"
                        android:src="@drawable/shop_arrow_rignt"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:background="@color/linecolor"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_shop_name"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="15dp"
                        android:text="店铺名称:"
                        tools:text="规格参数:meiko 华为零售店"

                        android:textColor="@color/slow_black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_go"
                        android:layout_width="92dp"
                        android:layout_height="30dp"
                        android:lines="2"
                        android:gravity="center"
                        android:layout_marginLeft="15dp"
                        android:text="@string/jdgg"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/login_selector"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="31dp"
                    android:layout_weight="1"
                    android:background="#FFD2D2D2" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="31dp"
                    android:layout_marginRight="31dp"
                    android:gravity="center"
                    android:text="@string/spxq"
                    android:textColor="@color/slow_black"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="31dp"
                    android:layout_weight="1"
                    android:background="#FFD2D2D2" />

            </LinearLayout>

            <com.zhongchuang.canting.widget.RegularListView
                android:id="@+id/rl_menu"
                style="@style/lv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:visibility="visible" />

        </LinearLayout>
    </com.zhongchuang.canting.widget.StickyScrollView>
    <LinearLayout
        android:id="@+id/ll_chat"
        android:layout_marginRight="12dp"
        android:layout_width="wrap_content"
        android:layout_height="48dp"

        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="#00000000"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:src="@drawable/messagess"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/lxwm"
            android:textColor="@color/color3"
            android:textSize="11sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bg_f5"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_add_car"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/jrgwc"
            android:textColor="@color/slow_black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue"
            android:gravity="center"
            android:text="@string/ljgm"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        android:src="@drawable/shap_back" />
    <ImageView
        android:id="@+id/iv_shre"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        android:src="@drawable/icon_share" />
</RelativeLayout>